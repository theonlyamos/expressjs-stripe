extends layout

block content
  .globalContent
    main
      .stripes
        .stripe.s1
        .stripe.s2
        .stripe.s3
      section.container-lg
        
        // Example 2
        #example-5.cell.example.example5
          form#card-element
            #example5-paymentRequest
              // Stripe paymentRequestButton Element inserted here
            fieldset
              legend.card-only(data-tid='elements_examples.form.pay_with_card') Pay with card
              legend.payment-request-available(data-tid='elements_examples.form.enter_card_manually') Or enter card details
              .row
                .field
                  label(for='example5-name' data-tid='elements_examples.form.name_label') Name
                  input#example5-name.input(data-tid='elements_examples.form.name_placeholder' type='text' placeholder='Jane Doe' required='' autocomplete='name')
              .row
                .field
                  label(for='example5-email' data-tid='elements_examples.form.email_label') Email
                  input#example5-email.input(data-tid='elements_examples.form.email_placeholder' type='text' placeholder='janedoe@gmail.com' required='' autocomplete='email')
                .field
                  label(for='example5-phone' data-tid='elements_examples.form.phone_label') Phone
                  input#example5-phone.input(data-tid='elements_examples.form.phone_placeholder' type='text' placeholder='(941) 555-0123' required='' autocomplete='tel')
              div(data-locale-reversible='')
                .row
                  .field
                    label(for='example5-address' data-tid='elements_examples.form.address_label') Address
                    input#example5-address.input(data-tid='elements_examples.form.address_placeholder' type='text' placeholder='185 Berry St' required='' autocomplete='address-line1')
                .row(data-locale-reversible='')
                  .field
                    label(for='example5-city' data-tid='elements_examples.form.city_label') City
                    input#example5-city.input(data-tid='elements_examples.form.city_placeholder' type='text' placeholder='San Francisco' required='' autocomplete='address-level2')
                  .field
                    label(for='example5-state' data-tid='elements_examples.form.state_label') State
                    input#example5-state.input.empty(data-tid='elements_examples.form.state_placeholder' type='text' placeholder='CA' required='' autocomplete='address-level1')
                  .field
                    label(for='example5-zip' data-tid='elements_examples.form.postal_code_label') ZIP
                    input#example5-zip.input.empty(data-tid='elements_examples.form.postal_code_placeholder' type='text' placeholder='94107' required='' autocomplete='postal-code')
              .row
                .field
                  label(for='example5-card' data-tid='elements_examples.form.card_label') Card
                  #example5-card.input
              button#submit(type='submit' data-tid='elements_examples.form.pay_button') Pay $300
            .error(role='alert')
              svg(xmlns='http://www.w3.org/2000/svg' width='17' height='17' viewbox='0 0 17 17')
                path.base(fill='#000' d='M8.5,17 C3.80557963,17 0,13.1944204 0,8.5 C0,3.80557963 3.80557963,0 8.5,0 C13.1944204,0 17,3.80557963 17,8.5 C17,13.1944204 13.1944204,17 8.5,17 Z')
                path.glyph(fill='#FFF' d='M8.5,7.29791847 L6.12604076,4.92395924 C5.79409512,4.59201359 5.25590488,4.59201359 4.92395924,4.92395924 C4.59201359,5.25590488 4.59201359,5.79409512 4.92395924,6.12604076 L7.29791847,8.5 L4.92395924,10.8739592 C4.59201359,11.2059049 4.59201359,11.7440951 4.92395924,12.0760408 C5.25590488,12.4079864 5.79409512,12.4079864 6.12604076,12.0760408 L8.5,9.70208153 L10.8739592,12.0760408 C11.2059049,12.4079864 11.7440951,12.4079864 12.0760408,12.0760408 C12.4079864,11.7440951 12.4079864,11.2059049 12.0760408,10.8739592 L9.70208153,8.5 L12.0760408,6.12604076 C12.4079864,5.79409512 12.4079864,5.25590488 12.0760408,4.92395924 C11.7440951,4.59201359 11.2059049,4.59201359 10.8739592,4.92395924 L8.5,7.29791847 L8.5,7.29791847 Z')
              span.message
          .success
            .icon
              svg(width='84px' height='84px' viewbox='0 0 84 84' version='1.1' xmlns='http://www.w3.org/2000/svg' xmlns:xlink='http://www.w3.org/1999/xlink')
                circle.border(cx='42' cy='42' r='40' stroke-linecap='round' stroke-width='4' stroke='#000' fill='none')
                path.checkmark(stroke-linecap='round' stroke-linejoin='round' d='M23.375 42.5488281 36.8840688 56.0578969 64.891932 28.0500338' stroke-width='4' stroke='#000' fill='none')
            h3.title(data-tid='elements_examples.success.title') Payment successful
            p.message
              span(data-tid='elements_examples.success.message')
                pre
            
